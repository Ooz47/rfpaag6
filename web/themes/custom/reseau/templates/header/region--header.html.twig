{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
  'row',
  'align-items-center',
  'gx-0',
  ]
%}

{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {{ content }}
    	<div class="AccessBtn col-xl-1 col-lg-6 col-md-3 col-sm-6 col-5 d-none d-md-block">
			<a href="javascript://" class="AccessBtn-plus" title="Augmenter la taille du texte">A+</a>
			<a href="javascript://" class="AccessBtn-moins" title="Réduire la taille du texte">A-</a>
			<a href="javascript://" class="AccessBtn-contraste" title="Version alternative">Version contrasté</a>
			<!--
							<a href="javascript://" class="AccessButton-egal" title="Retrouver la taille standard du texte">A=</a>
			-->
		</div>
   
  </div>
{% endif %}
